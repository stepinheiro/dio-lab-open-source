nome_banco = "BANCO DA STEPHANIE CARDOSO"
nome_cliente = input("Digite seu nome para acessar sua conta: ")

saldo = 0
extrato = []
limite_saque = 500
max_saques = 3
qtd_saques = 0

def mostrar_cabecalho():
    print("\n" + "=" * 40)
    print(f" {nome_banco}")
    print(f" Cliente: {nome_cliente}")
    print("=" * 40)

while True:
    mostrar_cabecalho()
    print("[D] Dep√≥sito")
    print("[S] Saque")
    print("[E] Extrato")
    print("[Q] Sair")
    opcao = input("Escolha uma op√ß√£o: ").lower()

    if opcao == 'd':
        valor = float(input("\nDigite o valor do dep√≥sito: R$ "))
        if valor > 0:
            saldo += valor
            extrato.append(f"Dep√≥sito: R$ {valor:.2f}")
            print("‚úÖ Dep√≥sito realizado com sucesso!")
        else:
            print("‚ùå Valor inv√°lido para dep√≥sito.")

    elif opcao == 's':
        if qtd_saques >= max_saques:
            print("‚ùå Voc√™ atingiu o n√∫mero m√°ximo de saques di√°rios.")
            continue

        valor = float(input("\nDigite o valor do saque: R$ "))
        if valor <= 0:
            print("‚ùå Valor inv√°lido.")
        elif valor > saldo:
            print("‚ùå Saldo insuficiente.")
        elif valor > limite_saque:
            print(f"‚ùå O limite por saque √© de R$ {limite_saque}.")
        else:
            saldo -= valor
            qtd_saques += 1
            extrato.append(f"Saque: R$ {valor:.2f}")
            print("‚úÖ Saque realizado com sucesso!")

    elif opcao == 'e':
        print("\n========== EXTRATO ==========")
        if not extrato:
            print("Nenhuma movimenta√ß√£o realizada.")
        else:
            for item in extrato:
                print(item)
        print(f"\nSaldo atual: R$ {saldo:.2f}")
        print("=============================")

    elif opcao == 'q':
        print(f"\nüëã Obrigado por usar o {nome_banco}, {nome_cliente}!")
        break

    else:
        print("‚ùå Op√ß√£o inv√°lida. Tente novamente.")
